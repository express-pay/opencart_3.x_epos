{{ header }}{{ column_left }}{{ column_right }}
<div id="content" class="container">{{ content_top }}
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <h2>{{ heading_title }}</h2>
    <p>{{ text_message }}</p>
    <div class="buttons">
        <div class="right"><a id="button-confirm" class="btn btn-primary" data-loading-text="{{ text_loading }}" href="{{ continue }}">{{ button_continue }}</a></div>
    </div>
    {{ content_bottom }}
</div>
{{ footer }}